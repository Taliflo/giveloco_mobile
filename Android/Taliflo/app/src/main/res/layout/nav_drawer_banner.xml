<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/banner_picture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/mova"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"
        />

    <LinearLayout
        android:id="@+id/banner_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/banner_picture"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        >

        <TextView
            android:id="@+id/banner_first"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/nav_banner_first"
            />

        <TextView
            android:id="@+id/banner_last"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/nav_banner_last"
            />

        </LinearLayout>

</RelativeLayout>