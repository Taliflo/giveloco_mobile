<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="160dp"
    android:background="@color/taliflo_purple"
    >

    <ImageView
        android:id="@+id/user_image1"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/user_name1"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:text="@string/dummy_business_name"
            android:textColor="@color/white"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/user_summary1"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:text="@string/dummy_business_summary"
            android:textColor="@color/white"
            android:maxLines="4"
            />

        <TextView
            android:id="@+id/user_tags1"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:text="@string/dummy_business_tags"
            android:textColor="@color/purple"
            android:textSize="12sp"
            android:maxLines="2"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:src="@drawable/orange_people"
                />

            <TextView
                android:id="@+id/user_support1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/dummy_supporters_num"
                android:textColor="@color/taliflo_orange"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>