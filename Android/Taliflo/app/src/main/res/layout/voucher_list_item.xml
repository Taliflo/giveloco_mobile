<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_selector"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/voucher_image"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/voucher_distributor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_business_name"
            android:textColor="@color/taliflo_purple"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/voucher_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_value"
            android:textColor="@color/taliflo_tiffanyBlue"
            android:textStyle="bold"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:src="@drawable/orange_people"
                />

            <TextView
                android:id="@+id/voucher_supported_causes"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="@string/dummy_supported_causes"
                android:textColor="@color/taliflo_orange"
                />

        </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="4"
            android:src="@drawable/ic_action_next_item_lg"
            />

    </LinearLayout>

</LinearLayout>