<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/lightest_grey"
    tools:context="com.taliflo.app.activities.Donate">

    <Button
        android:id="@+id/donate_btnConfirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/donate_btnConfirmText"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_bg_tb"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/donate_btnConfirm"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="@string/donate_headingDonate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/taliflo_tiffanyBlue"
                />

            <TextView
                android:text="@string/donate_$20"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="32sp"
                android:textColor="@color/taliflo_tiffanyBlue"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/donate_msg1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/donate_msg1"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/donate_companyName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_business_name"
            android:textSize="18sp"
            android:textColor="@color/taliflo_purple"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <RadioGroup
            android:id="@+id/donate_radioGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            
            <RadioButton
                android:id="@+id/donate_radioBtn20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/donate_$20"
                android:paddingRight="10dp"
                android:paddingLeft="0dp"
                android:textSize="18sp"
                android:layout_gravity="center"/>

            <RadioButton
                android:id="@+id/donate_radioBtn40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/donate_radioBtn$40"
                android:paddingRight="10dp"
                android:paddingLeft="0dp"
                android:textSize="18sp"
                android:layout_gravity="center"/>

            <RadioButton
                android:id="@+id/donate_radioBtn60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/donate_radioBtn$60"
                android:textSize="18sp"
                android:paddingRight="10dp"
                android:paddingLeft="0dp"
                android:layout_gravity="center"/>

            <RadioButton
                android:id="@+id/donate_radioBtn100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/donate_radioBtn$100"
                android:textSize="18sp"
                android:layout_gravity="center"/>

        </RadioGroup>

        <CheckBox
            android:id="@+id/donate_donateMonthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/donate_donateMonthlyText"
            android:textSize="18sp"
            android:layout_gravity="center" />

    </LinearLayout>

</RelativeLayout>
