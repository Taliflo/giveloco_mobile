<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Taliflo teal coloured theme -->
    <style name="CustomTealTheme" parent="@android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TealActionBar</item>
    </style>
        <!-- Taliflo teal coloured action bar -->
        <style name="TealActionBar" parent="@android:Widget.Holo.ActionBar">
            <item name="android:background">@drawable/action_bar_teal_bg</item>
            <item name="android:titleTextStyle">@style/TealActionBar.TitleTextStyle</item>
        </style>
        <!-- Font Appearance -->
        <style name="TealActionBar.TitleTextStyle" parent="@android:TextAppearance.Holo.Widget.ActionBar.Title">
            <item name="android:textColor">#ffffff</item>
        </style>

    <!-- Taliflo white coloured theme -->
    <style name="CustomLightGreyTheme" parent="@android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/LightGreyActionBar</item>
    </style>
        <!-- Taliflo white coloured action bar -->
        <style name="LightGreyActionBar" parent="@android:Widget.Holo.ActionBar">
            <item name="android:background">#ffffff</item>
            <item name="android:titleTextStyle">@style/TiffanyBlueTextStyle</item>
        </style>
        <!-- Font appearance -->
        <style name="TiffanyBlueTextStyle" parent="@android:TextAppearance.Holo.Widget.ActionBar.Title">
            <item name="android:textColor">#00a79d</item>
        </style>

    <!-- Style to remove action bar for the Login activity -->
    <style name="NoActionBar" parent="@android:Theme.Holo.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>



</resources>
